/* Small Google Sheets time-triggered script cleaning data from two specified areas
Further information about used methods you may find here

https://developers.google.com/apps-script/reference/script/clock-trigger-builder?hl=en

You're always welcome to upgrade this code and I will be pleased if you do
*/

function setUppTrigger() {       								//function to create new time-based trigger
 
  ScriptApp.newTrigger('TimeClear')     						//main executable function name is in the brackets
  .timeBased()
  .atHour(23)     												//execute func TimeClear at 11 p.m (note time here shoul–≤ be written at 24-hour basis)
  .everyDays(1)     											//execute func TimeClear every n days
  .inTimezone('Europe/Moscow')      							//unnecesary method to specify the timezone
  .create(); 
}

function TimeClear() {
  var sheet = SpreadsheetApp.getActiveSheet();					//var sheet will take the value of active list of your sheet
  var rangesAddressesList_1 = ["B3:C16"];						//first range to clear
  var rangesAddressesList_2 = ["E3:F16"];						//second range to clear
  resetByRangesList_1(sheet, rangesAddressesList_1);			//call the function resetByRangesList_1 with variables 'sheet' and 'rangesAddressesList_1'
  resetByRangesList_2(sheet, rangesAddressesList_2);			//call the function resetByRangesList_2 with variables 'sheet' and 'rangesAddressesList_2'
}

function resetByRangesList_1(sheet, rangesAddressesList_1){
  sheet.getRangeList(rangesAddressesList_1).clearContent();
}

function resetByRangesList_2(sheet, rangesAddressesList_2){
  sheet.getRangeList(rangesAddressesList_2).clearContent();
}
